<?xml version="1.0"?>
<launch>
  <!-- https://github.com/ros-planning/navigation/issues/206 -->


  <!-- Map server -->
  <arg name="map_file" default="$(find betabot)/maps/map1.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <include file="$(find betabot)/launch/includes/amcl.launch.xml">

    <arg name="initial_pose_x" value="0"/>
    <arg name="initial_pose_y" value="0"/>
    <arg name="initial_pose_a" value="0"/>

  </include>

  <include file="$(find betabot)/launch/includes/move_base.launch.xml"/>

</launch>
